@model F1VacationSite.Models.Trip

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

@await Html.PartialAsync("TripPartial", Model)

<h4>Trip</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
